{
  "info": {
    "name": "NDEX Phase 1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.access_token) {",
              "  pm.environment.set('access_token', json.access_token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "username",
              "value": "user@example.com"
            },
            {
              "key": "password",
              "value": "password123"
            }
          ]
        }
      }
    },
    {
      "name": "Projects - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/projects/create",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "projects",
            "create"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My First Project\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.id) {",
              "  pm.environment.set('project_id', json.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "UML - Generate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/uml/generate",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "uml",
            "generate"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"input_text\": \"Create a User class with id and email, and a Project class with name\"\n}"
        }
      }
    },
    {
      "name": "Code - Analyze",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/code/analyze",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "code",
            "analyze"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"language\": \"python\",\n  \"code\": \"def add(a, b):\\n    return a + b\\n\\nresult = add(1, 2)\"\n}"
        }
      }
    },
    {
      "name": "Repo - Analyze",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/repo/analyze",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "repo",
            "analyze"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"repo_url\": \"https://github.com/octocat/Hello-World\"\n}"
        }
      }
    },
    {
      "name": "Projects - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/projects/list",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "projects",
            "list"
          ]
        }
      }
    },
    {
      "name": "Projects - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/projects/{{project_id}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "projects",
            "{{project_id}}"
          ]
        }
      }
    }
  ]
}
